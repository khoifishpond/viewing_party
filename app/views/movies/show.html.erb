<h1><%= @movie.title %></h1>
<%= button_to 'Create Viewing Party', new_party_path, method: :get, params: {movie_id: @movie.id}, local: true %><br>
Vote Average: <%= @movie.vote_average %><br>
Runtime: <%= @movie.runtime %><br>
Genres:
<ul>
<% @movie.genres.each do |genre| %>
  <li><%= genre[:name] %></li>
<% end %>
</ul>

<h2>Cast</h2>
<% @cast.each do |c| %>
  <%= c.name %> as <%= c.character %><br>
<% end %>

<h2>Reviews</h2>
Total Number of Reviews: <%= @reviews.count %>
<br>
<br>
<% @reviews.each do |review| %>
  Author: <%= review.author %><br>
  Review: <%= review.content %>
  <br>
  <br>
<% end %>
